generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model images {
  id             Int    @id @default(autoincrement())
  filename       String @db.VarChar(255)
  mimetype       String @db.VarChar(255)
  imageThumbnail String @db.LongText
  addedBy        String @db.Char(36)
}

model sets {
  id             String   @id @unique(map: "id") @db.Char(36)
  setNumber      Int      @unique(map: "setNumber")
  name           String   @unique(map: "set_name_unique") @db.VarChar(255)
  description    String?  @db.Text
  partsAmount    Int
  themeId        Int
  themeName      String   @db.Text
  yearReleased   Int?
  bought         Boolean?
  yearBought     Int?
  price          Int?
  imageThumbnail String?  @db.VarChar(255)
  ownedBy        String   @db.Char(36)
  addedOn        DateTime @db.DateTime(0)
  instructions   String?  @db.Text
}

model users {
  id       String  @id @unique(map: "id") @db.Char(36)
  username String? @db.VarChar(255)
  email    String  @unique(map: "email") @db.VarChar(255)
  password String  @db.VarChar(255)
  sessions Json?
  sets     Json?
}
